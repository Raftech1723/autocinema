version: '3.9'

services:
  mysql-container:
    image: mysql:8.0
    container_name: mysql-container
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: autocinemadb
    ports:
      - "3306:3306"
    networks:
      - autocinema-net

  autocinema-home:
    build: ./autocinema-home
