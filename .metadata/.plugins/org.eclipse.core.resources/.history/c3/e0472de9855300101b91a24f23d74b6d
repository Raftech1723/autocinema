spring:
  application:
    name: autocinema-gateway

  cloud:
    gateway:
      routes:
        - id: home
          uri: http://localhost:8001
          predicates:
            - Path=/home/**

        - id: usuario
          uri: http://localhost:8002
          predicates:
            - Path=/usuarios/**

        - id: pelicula
          uri: http://localhost:8003
          predicates:
            - Path=/pelicula/**

        - id: sede
          uri: http://localhost:8004
          predicates:
            - Path=/sedes/**

        - id: sala
          uri: http://localhost:8005
          predicates:
            - Path=/salas/**

        - id: reclamo
          uri: http://localhost:8006
          predicates:
            - Path=/reclamos/**

        - id: metodopago
          uri: http://localhost:8007
          predicates:
            - Path=/metodopago/**

        - id: funciones
          uri: http://localhost:8008
          predicates:
            - Path=/funciones/**

        - id: estacionamiento
          uri: http://localhost:8009
          predicates:
            - Path=/estacionamiento/**

        - id: confiteria
          uri: http://localhost:8010
          predicates:
            - Path=/confiteria/**

        - id: categoria
          uri: http://localhost:8011
          predicates:
            - Path=/categorias/**

        - id: boletos
          uri: http://localhost:8012
          predicates:
            - Path=/boletos/**

      default-filters:
        - AddResponseHeader=X-Gateway-Response, Autocinema Gateway